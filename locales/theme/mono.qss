    gridline-color: #444444;
}

#statistic_table::item {
    padding: 5px;
    color: #FFFFFF;
}

#statistic_table::item:selected {
    background-color: #555555;
    color: #FFFFFF;
}

#statistic_table::section {
    background-color: #444444;
    color: #FFFFFF;
